#
#   This .bashrc part is dedicated to the management of you MultiversX API Services 
#

source $HOME/mvx-api-deployer/config.cfg 
source $HOME/mvx-api-deployer/0-common.sh
source $HOME/mvx-api-deployer/5-manage-services.sh
#------------------------------------------------------------
#                Observing Squad Commands
#------------------------------------------------------------

alias monitoring-0="$HOME/elrond-utils/termui --address localhost:8080"
alias monitoring-1="$HOME/elrond-utils/termui --address localhost:8081"
alias monitoring-2="$HOME/elrond-utils/termui --address localhost:8082"
alias monitoring-3="$HOME/elrond-utils/termui --address localhost:8083"
alias monitoring-proxy="journalctl -f -u elrond-proxy.service"

# ----------- Start & Stop the Node(s) present on the machine
alias start-observing_squad="$HOME/mx-chain-scripts/script.sh start"
alias stop-observing_squad="$HOME/mx-chain-scripts/script.sh stop"


#------------------------------------------------------------
#                MultiversX Indexer Commands
#------------------------------------------------------------
alias start-indexer="$HOME/mx-chain-es-indexer-go/cmd/elasticindexer/elasticindexer"
alias stop-indexer="$HOME/mx-chain-scripts/script.sh stop-indexer"


#------------------------------------------------------------
#                   Generic User Configuration
#------------------------------------------------------------
alias ll="ls -lah"
alias ..="cd .."